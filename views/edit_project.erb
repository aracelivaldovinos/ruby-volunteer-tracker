
<link href="/stylesheets/projects.css" rel="stylesheet" type="text/css">

<div class="body">
  <div class="holder">
    <div class="content">
      <div class="items">
        <h3><%=@project.title %></h3>
        <p></p>
        <form action="/projects/<%=@project.id() %>" method="post">
          <div class="col-md-12">
            <input name="_method" type="hidden" value="patch">
            <input class="form-control" type="text" name="title" placeholder="New project name" required>
          </div>
          <div class="form-button mt-3">
            <button id="submit" type="submit" class="btn btn-warning">Submit</button>
          </div>  
        </form>
        <form action="/projects/<%=@project.id() %>" method="post">
          <input name="_method" type="hidden" value="delete">
          <div class="form-button mt-3">
            <button id="submit" type="submit" class="btn btn-danger">Delete</button>
          </div>
        </form>  
      </div>
    </div>
  </div>
</div>








