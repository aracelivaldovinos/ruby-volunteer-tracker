
<link href="/stylesheets/projects.css" rel="stylesheet" type="text/css">

<div class="body">
  <div class="holder">
    <div class="content">
      <div class="items">
        <h3>Add a new volunteer</h3>
        <p>Fill in the line below.</p>
        <form action="/projects/<%= @project.id %>/volunteers" method="post">
          <div class="col-md-12">
            <input class="form-control" type="text" name="name" placeholder="Volunteer name" required>
          </div>
          <div class="form-button mt-3">
            <button id="submit" type="submit" class="btn btn-warning">Submit</button>
          </div>  
        </form>
      </div>
    </div>
  </div>
</div>



<div class="body">
  <div class="holder-1">
    <div class="content">
      <div class="items">
        <h3>Volunteers</h3>
        <p >
          <a href="/projects/<%= @project.id %>/edit"> Edit Project</a>
        </p>
          <% if @project.volunteers.any? %>
            <ol>
              <% @project.volunteers.each do |volunteer| %>
                <p><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id%>"><%=volunteer.name %></a></p>
              <% end %>
            </ol>
          <% else %>
          <p>There are currently no projects to display.</p>
          <% end %>
      </div>
    </div>
  </div>
</div>
