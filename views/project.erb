<div class="row">
  <div class="col-sm">
    <h1 class="text">Add a new volunteer</h1>
    <hr>
      <form action="/projects/<%= @project.id %>/volunteers" method="post">
        <div class="form-group">
          <label for="name">Volunteer name:</label>
          <input id="n" name="name" class="form-control" type="text" required>
        </div>
        <div class= "button">
          <button type="submit" class="btn btn-primary">Add volunteer</button>
        </div>
      </form>
  </div>
  <div class="col-sm">
    <h1 class= "text">Project: <%=@project.title %></h1>
    <hr>
    <h4 class="text">Volunteers</h4>
    <% if @project.volunteers.any? %>
      <ol>
        <% @project.volunteers.each do |volunteer| %>
          <li><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id%>"><%=volunteer.name %></a><li>
        <%end %> 
      </ol>
    <%else %> 
      <p> There are no volunteers listed for this project yet.</p>
    <%end %> 
  </div>
  <p><a href="/projects/<%= @project.id %>/edit"> Edit Project</a></p><h5>|</h5><p><a href="/projects"> Go back</a></p>
</div>