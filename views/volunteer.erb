<div class="row">
  <div class="col-sm">
    <h1 class="text">Project: <%= @volunteer.project.title%></h2>
    <h3 class="text">Volunteer: <%= @volunteer.name%></h3>
    <form action="/projects/<%=@volunteer.project.id %>/volunteers/<%= @volunteer.id%>" method="post">
      <input name="_method" type="hidden" value="patch">
      <label for='name'> Rename volunteer</label>
      <input id='name' name='name' type="text" required>
      <button type="submit">Update Volunteer</button>
    </form>
    <form action="/projects/<%=@volunteer.project.id %>/volunteers/<%= @volunteer.id%>" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit">Delete volunteer</button>
    </form>  
  </div>
  <p><a href="/projects/<%= @volunteer.project.id %>"> Back to <%= @volunteer.project.title %></a></p>
</div>



