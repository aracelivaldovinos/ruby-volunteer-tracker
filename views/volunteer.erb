
<link href="/stylesheets/projects.css" rel="stylesheet" type="text/css">

<div class="body">
  <div class="holder">
    <div class="content">
      <div class="items">
        <h3>Project: <%= @volunteer.project.title%></h3>
        <p>Volunteer: <%= @volunteer.name%></p>
        <form action="/projects/<%=@volunteer.project.id %>/volunteers/<%= @volunteer.id%>" method="post">
          <div class="col-md-12">
            <input name="_method" type="hidden" value="patch">
            <input class="form-control" type="text" name="name" placeholder="New volunteer name" required>
          </div>
          <div class="form-button mt-3">
            <button id="submit" type="submit" class="btn btn-warning">Submit</button>
          </div>  
        </form>
        <form action="/projects/<%=@volunteer.project.id %>/volunteers/<%= @volunteer.id%>" method="post">
          <input name="_method" type="hidden" value="delete">
          <div class="form-button mt-3">
            <button id="submit" type="submit" class="btn btn-danger">Delete</button>
          </div>
        </form> 
        <p class="back_link"><a href="/projects/<%= @volunteer.project.id %>"> Back to <%= @volunteer.project.title %></a></p>
      </div>
    </div>
  </div>
</div>





