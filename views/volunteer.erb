

<h2><%= @volunteer.project.title%></h2>
<h3><%= @volunteer.name%></h3>


<form action="/projects/<%=@volunteer.project.id %>/volunteers/<%= @volunteer.id%>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for='name'> Rename volunteer</label>
  <input id='name' name='name' type="text" required>

  <button type="submit">Update Volunteer</button>
</form>

<form action="/projects/<%=@volunteer.project.id %>/volunteers/<%= @volunteer.id%>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete volunteer</button>
</form>  


<p><a href="/projects"> Go back to project list</a></p>